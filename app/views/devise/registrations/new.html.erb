<div class="container">
  <div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
      <!-- Nested Row within Card Body -->
      <div class="row">
        <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
        <div class="col-lg-7">
          <div class="p-5">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4">Crie sua Conta!</h1>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="user">
                <div class="form-group">
                  <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-user", placeholder: "Informe seu nome" %>
                </div>
                <div class="form-group">
                  <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-user", placeholder: "example@example.com" %>
                </div>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user", placeholder: "Crie sua senha" %>
                  </div>
                  <div class="col-sm-6">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user", placeholder: "Confirme sua senha" %>
                  </div>
                </div>
                <%= f.submit "Sign up", class: "btn btn-info btn-user btn-block" %>
              </div>
            <% end %>
            <hr>
            <div class="text-center">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>