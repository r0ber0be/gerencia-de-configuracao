
<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">City Info</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm"><i
      class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
  </div>
  <!-- Table List all Cities -->
  <div class="container-fluid">
    <div class="card shadow mb-4">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>ID</th>
                <th><%= translate(@city_infos, :coef_rsu_per_capita) %></th>
                <th><%= translate(@city_infos, :coef_metal_ferroso) %></th>
                <th><%= translate(@city_infos, :coef_metal_nao_ferroso) %></th>
                <th><%= translate(@city_infos, :coef_plastico_filme) %></th>
                <th><%= translate(@city_infos, :coef_plastico_rigido) %></th>
                <th><%= translate(@city_infos, :coef_papel_papelao) %></th>
                <th><%= translate(@city_infos, :coef_vidro) %></th>
                <th><%= translate(@city_infos, :price_metal_ferroso) %></th>
                <th><%= translate(@city_infos, :price_metal_nao_ferroso) %></th>
                <th><%= translate(@city_infos, :price_plastico_filme) %></th>
                <th><%= translate(@city_infos, :price_plastico_rigido) %></th>
                <th><%= translate(@city_infos, :price_papel_papelao) %></th>
                <th><%= translate(@city_infos, :price_vidro) %></th>
              </tr>
            </thead>
            <tbody>
              <% @city_infos.each do |info| %>
                <tr>
                  <td><%= info.city_id %></td>
                  <td><%= info.coef_rsu_per_capita %></td>
                  <td><%= info.coef_metal_ferroso %></td>
                  <td><%= info.coef_metal_nao_ferroso %></td>
                  <td><%= info.coef_plastico_filme %></td>
                  <td><%= info.coef_plastico_rigido %></td>
                  <td><%= info.coef_papel_papelao %></td>
                  <td><%= info.coef_vidro %></td>
                  <td><%= info.price_metal_ferroso %></td>
                  <td><%= info.price_metal_nao_ferroso %></td>
                  <td><%= info.price_plastico_filme %></td>
                  <td><%= info.price_plastico_rigido %></td>
                  <td><%= info.price_papel_papelao %></td>
                  <td><%= info.price_vidro %></td>
                  <td style="width: 120px; max-width: 140px">
                    <%= link_to edit_city_info_path(info), class:"btn btn-primary btn-circle" do %>
                      <i class="fa fa-edit"></i>
                    <% end %>
                    <%= link_to city_info_path(info), :method => :delete, class:"btn btn-danger btn-circle" do %>
                      <i class="fa fa-minus"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.container-fluid -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>