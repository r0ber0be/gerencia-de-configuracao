<div class="container-fluid">
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Add a City</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm"><i
      class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
  </div>

  <div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">  
          <div class="col-lg-12">
            <div class="p-5">    
            <!---Add new city form--->
              <%= form_with(model: [ @city ], data: { turbo_confirm: 'Os dados estÃ£o corretos?'}) do |form|%>
                <div class="form-group form-floating row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <b><%= form.label :name, class:"text-dark" %></b>
                    <%= form.text_field :name, class:"form-control", id:"cityName", required:"true", placeholder:"Insert a city name"%>
                  </div>
                  
                  <div class="col-sm-6">
                    <b><%= form.label :state, class:"text-dark" %></b>
                    <%= form.text_field :state, class:"form-control", id:"cityState", required:"true", placeholder:"UF/State"%>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-sm-4 mb-3 mb-sm-0">
                    <b><%= form.label :pop1991, class:"text-dark" %></b>
                    <%= form.number_field :pop1991, class:"form-control", id:"pop1991", required:"true",  placeholder:"Report the total population" %>
                  </div>
                  <div class="col-sm-4 mb-3 mb-sm-0">
                    <b><%= form.label :pop2000, class:"text-dark" %></b>
                    <%= form.number_field :pop2000, class:"form-control", id:"pop2000", required:"true",  placeholder:"Report the total population" %>
                  </div>
                  <div class="col-sm-4">
                    <b><%= form.label :pop2010, class:"text-dark" %></b>
                    <%= form.number_field :pop2010, class:"form-control", id:"pop2010", required:"true",  placeholder:"Report the total population" %>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary btn-city btn-block">Register City</button>
              <% end %>
            <!---Add new city form-->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>